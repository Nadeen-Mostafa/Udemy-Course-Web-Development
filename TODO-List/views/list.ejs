
<%- include("header"); -%>
    <div class="box" id="heading">
        <!-- make marker -->
        <h1> <%= ListTitle %> </h1>
    </div>
    
    <div class="box">
            <!-- scriptlet tags to use js inside html also use in control flow (it is line by line) -->
            <% for(var i=0;i<newListItems.length;i++) { %>
                <div class="item">
                    <input type="checkbox">
                    <p><%= newListItems[i] %></p>
                </div>

            <% } %> 
            

            <form  action="/" method="post" class="item">
                <input type="text" name="Task" placeholder="New Task" autocomplete="off">
                <button class="btn btn-primary" type="submit" name="list" value=<%= ListTitle %>>+</button>
            </form>
    </div>

<%- include("footer"); -%>
